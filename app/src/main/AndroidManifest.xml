<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yujin.inColor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.yujin.inColor.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/in_color_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/in_color_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yujin.inColor.view.DiaryActivity" />
        <activity android:name="com.yujin.inColor.view.FindPasswordActivity" />
        <activity android:name="com.yujin.inColor.view.SignupActivity" />
        <activity android:name="com.yujin.inColor.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yujin.inColor.view.MainActivity" />
    </application>

</manifest>